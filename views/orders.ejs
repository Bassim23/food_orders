<%- include partials/_head %>

  <body>
    <div class="container">
      <header>
        <nav>
          <div class="row">
            <div class="col-sm-1">
              <p>Hello, user</p>
            </div>
            <div class="col-sm-1 col-sm-offset-10">
              <form action="/api/logout" method="POST">
                <input type="submit" value="Logout">
              </form>
            </div>
          </div>
        </nav>

        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 text-center">
            <h1 class="main-heading">PENDING ORDERS</h1>
          </div>
        </div>
      </header>

      <section class="orders-container">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 order-row">
            <div class="vertical-align">
              <div class="col-sm-2">
                <p class="items">4 ITEMS</p>
              </div>
              <div class="col-sm-6 col-sm-offset-1 text-center">
                <p class="customer-order">Customer order #1</p>
              </div>
              <div class="col-sm-3">
                <p class="time">8 MINUTES AGO</p>
              </div>
            </div>
            <div class="col-sm-2 col-sm-offset-5 text-center">
              <i class="fa fa-caret-down down-arrow" aria-hidden="true"></i>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 order-row">
            <div class="before-slide">
              <div class="vertical-align">
                <div class="col-sm-2">
                  <p class="items">4 ITEMS</p>
                </div>
                <div class="col-sm-6 col-sm-offset-1 text-center">
                  <p class="customer-order">Customer order #1</p>
                </div>
                <div class="col-sm-3">
                  <p class="time">8 MINUTES AGO</p>
                </div>
              </div>
              <div class="after-reveal">
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3 text-center">
                    <p class="customer-item-name">Taglierini</p>
                  </div>
                  <div class="col-sm-3">
                    <p class="customer-item-quantity">x2</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3 text-center">
                    <p class="customer-item-name">Ravioli Caprese</p>
                  </div>
                  <div class="col-sm-3">
                    <p class="customer-item-quantity">x1</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3 text-center">
                    <p class="customer-item-name">Wild Salmon</p>
                  </div>
                  <div class="col-sm-3">
                    <p class="customer-item-quantity">x1</p>
                  </div>
                </div>

                <div class="row">
                  <div class="col-sm-8 col-sm-offset-3">

                    <form class="form-inline">
                      <div class="form-group">
                        <label for="exampleInputEmail2">Email</label>
                        <input type="email" class="form-control" id="exampleInputEmail2" placeholder="jane.doe@example.com">
                        <div class="dropdown">
                          <a class="btn btn-secondary dropdown-toggle" href="https://example.com" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Dropdown link
                          </a>
                          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                          </div>
                        </div>
                      </div>
                      <button type="submit" class="btn btn-default">Send invitation</button>
                    </form>

                </div>
              </div>
              <div class="col-sm-2 col-sm-offset-5 text-center">
                <i class="fa fa-caret-down down-arrow" aria-hidden="true"></i>
              </div>
            </div>



          </div>
        </div>

      </section>

    </div>

    <script>
    $( ".order-row" ).click(function() {
      $( ".after-reveal" ).slideDown( "400");
      $(this).find($("i")).toggleClass('fa-caret-down fa-caret-up');

    });


    </script>

  </body>
</html>
