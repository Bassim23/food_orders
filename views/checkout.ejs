<%- include partials/_head %>

  <body>
    <header class="main">
      <%- include partials/_nav %>
      <div class="vertical-align">

        <div class="container">

          <div class="row vertical-align">
            <div class="col-sm-12 text-center">
              <h1>checkout.</h1>
              <img class="checkout-icon" src="/img/checkout-2.svg" alt="menu-item-1">
            </div>

          </div>


        </div>
      </div>
    </header>

    <div class="container">
      <section class="checkout-container">

        <div class="container">
          <div class="col-sm-10 col-sm-offset-1">

            <div class="row text-center row-headings">
              <div class="col-sm-2"></div>
              <div class="col-sm-3"></div>
              <div class="col-sm-3"><p>QTY</p></div>
              <div class="col-sm-2"><p>PRICE</p></div>
              <div class="col-sm-2"></div>
            </div>


            <div class="row text-center row-price">
              <div class="col-sm-2"></div>
              <div class="col-sm-3"></div>
              <div class="col-sm-3"><p><strong>TOTAL</strong></p></div>
              <div class="col-sm-2"><p class="total-price"></p></div>
              <div class="col-sm-2"></div>
            </div>


          </div>
        </div>
      </section>

      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <div class="col-sm-6">
            <button class="btn checkout" id="pay-in-person">Pay in person</button>
          </div>
          <div class="col-sm-6">
            <button class="btn checkout" id="pay-online">Pay online</button>
          </div>
        </div>
      </div>

    </div>
    <script type="text/javascript" src="/scripts/checkout.js"></script>
  </body>
</html>
