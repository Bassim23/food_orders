<%- include partials/_head %>
<!-- <%- include partials/_nav %> -->

  <body>
    <header>

      <div class="container">

        <div class="row">
          <div class="vertical-align">

          <div class="col-sm-4">
            <img class="header-icons fork" src="/img/fork.svg" alt="fork">
          </div>
          <div class="col-sm-4">
            <img class="plate" src="/img/image-1b.png" alt="menu-item-1">
          </div>
          <div class="col-sm-4">
            <img class="header-icons knife" src="/img/knife.svg" alt="knife">
          </div>

          </div>

        </div>

        <div class="row">
          <div class="col-sm-12 text-center">
            <h1 class="main-heading">cattle + geese</h1>
          </div>
        </div>

      </div>

    </header>




    <div class="container">

      <section class="menu-container">
      </section>
    </div>

    <footer class="navbar-fixed-bottom">
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <div class="col-sm-2">
              <p>Total</p>
              <h4>$</h4>
            </div>
            <div class="col-sm-4 col-sm-offset-6">
              <form>
                <button id="checkout-btn">
                  Proceed to checkout <i class="fa fa-caret-right" aria-hidden="true"></i>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <script>
      $(document).ready(function() {
        $(window).scroll(function() {
          if ($(this).scrollTop() < 150) {
            $("footer").slideUp();
          } else {
            $("footer").slideDown();
          }
        });
      });
    </script>

  </body>
</html>
